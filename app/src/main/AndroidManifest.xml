<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bayer.ah.bayertekenscanner">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.DisclaimerActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.ProfileSetupActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.FilterOptionActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.MoreInfoActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.LogInActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.LogInAndProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.QRScannerActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.InvestigatePetActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.EditPetActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.ProfileActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.ConditionsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.ApplyForPetActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.ApplyPetAgreementActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.ViewPetActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bayer.ah.bayertekenscanner.activity.BarcodeCaptureActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.IsCureTakenActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.DrugDateSelectionActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.DrugSelectionActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.HitStatusActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.NoOfSignReportedActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activity.CountrySelectionActivity"
                  android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_api_key"/>
    </application>

</manifest>