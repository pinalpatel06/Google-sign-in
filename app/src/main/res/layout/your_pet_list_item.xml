<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/what_is_your_pet_name"
                />
            <Button
                android:layout_width="@dimen/list_item_expand_button_width"
                android:layout_height="@dimen/list_item_expand_button_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@drawable/ic_expand_button"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_height="1dp"
            android:background="@color/bg_detail_title_underline"
            >

        </View>

    </LinearLayout>