<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/test_kit_step2_detail_layout_height"
            android:background="@color/color_qr_title_text">

            <tekkan.synappz.com.tekkan.custom.CustomFontTextView
                android:id="@+id/tv_apply_pet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                android:text="@string/apply_pet_text"
                android:textAlignment="center"
                android:textColor="@color/color_details_text_test_kit_step2"
                android:textSize="@dimen/test_kit_step2_detail_text_size"
                app:customfont="OpenSansRegular"/>
        </LinearLayout>

        <include layout="@layout/item_test_kit_add_pet"/>

        <tekkan.synappz.com.tekkan.custom.CustomButtonView
            android:id="@+id/btn_send_resuest"
            style="@style/TeekMeldenButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/extra_padding_15dp"
            android:text="@string/apply_pet_button_text"
            app:customfont="OpenSansSemiBold"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>