<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="@dimen/picker_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="center"
        android:orientation="horizontal">
        <com.bayer.ah.bayertekenscanner.custom.CustomButtonView
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/picker_cancel_text"
            android:textColor="@android:color/white"
            android:theme="@style/AppButtonStyle"/>

        <com.bayer.ah.bayertekenscanner.custom.CustomButtonView
            android:id="@+id/set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/picker_set_text"
            android:textColor="@android:color/white"
            android:theme="@style/AppButtonStyle"/>
    </LinearLayout>
</LinearLayout>