<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/default_margin"
    tools:context="tekkan.synappz.com.tekkan.fragment.ProductInformationFragment">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_product_image"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_splash_pets"
        />

    <tekkan.synappz.com.tekkan.custom.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/iv_product_image"
        android:layout_marginStart="@dimen/default_margin"
        android:maxLines="1"
        android:textColor="@color/color_product_title_text"
        android:id="@+id/tv_product_title"
        android:text="@string/disclaimer_text"
        app:customfont="OpenSansSemiBold"
        android:textSize="@dimen/product_title_text_size"
        android:layout_height="wrap_content" />

    <tekkan.synappz.com.tekkan.custom.CustomFontTextView
        android:id="@+id/tv_product_details"
        android:layout_width="match_parent"
        android:maxLines="2"
        app:customfont="OpenSansRegular"
        android:layout_marginEnd="@dimen/product_details_margin_end"
        android:layout_marginStart="@dimen/default_margin"
        android:textSize="@dimen/product_details_text_size"
        android:text="@string/disclaimer_text"
        android:layout_below="@+id/tv_product_title"
        android:layout_toEndOf="@+id/iv_product_image"
        android:layout_height="wrap_content" />


</RelativeLayout>
