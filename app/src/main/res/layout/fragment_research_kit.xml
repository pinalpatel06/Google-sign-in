<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <tekkan.synappz.com.tekkan.custom.CustomFontTextView
        android:id="@+id/tv_title"
        style="@style/TeekMeldenTitleTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thanks_title"
        app:customfont="OpenSansSemiBold"/>

    <tekkan.synappz.com.tekkan.custom.CustomFontTextView
        android:id="@+id/tv_research_kit_detail"
        style="@style/TeekMeldenDetailTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:text="@string/thnaks_detail_text"/>

    <tekkan.synappz.com.tekkan.custom.CustomButtonView
        android:id="@+id/btn_apply_kit"
        style="@style/TeekMeldenButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_have_kit"
        android:layout_marginBottom="@dimen/teek_melden_margin_20dp"
        android:text="@string/apply_for_kit_text"
        android:textSize="@dimen/research_kit_button_text_size"
        app:customfont="OpenSansSemiBold"/>

    <tekkan.synappz.com.tekkan.custom.CustomButtonView
        android:id="@+id/btn_have_kit"
        style="@style/TeekMeldenButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_no"
        android:layout_marginBottom="@dimen/teek_melden_margin_20dp"
        android:text="@string/have_kit_text"
        android:textSize="@dimen/research_kit_button_text_size"
        app:customfont="OpenSansSemiBold"/>

    <tekkan.synappz.com.tekkan.custom.CustomButtonView
        android:id="@+id/btn_no"
        style="@style/TeekMeldenButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10dp"
        android:layout_marginStart="@dimen/custom_button_margin"
        android:layout_marginEnd="@dimen/custom_button_margin"
        android:layout_alignParentBottom="true"
        android:text="@string/no_thanks"
        android:background="@drawable/bg_ripple_button"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/research_kit_button_text_size"
        app:customfont="OpenSansSemiBold"/>

</RelativeLayout>