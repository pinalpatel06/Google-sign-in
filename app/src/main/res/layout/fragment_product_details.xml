<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_product_details_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_splash_pets"/>

        <tekkan.synappz.com.tekkan.custom.CustomFontTextView
            android:id="@+id/tv_product_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/product_details_default_margin"
            android:text="@string/product_details_title"
            android:textColor="@color/color_product_details_title"
            android:textSize="@dimen/product_details_title_text_size"
            app:customfont="OpenSansSemiBold"/>

        <tekkan.synappz.com.tekkan.custom.CustomFontTextView
            android:id="@+id/tv_product_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/product_details_default_margin"
            android:text="@string/product_details_description"
            android:textColor="@color/color_product_details_description"
            android:textSize="@dimen/product_details_description_text_size"
            app:customfont="OpenSansRegular"/>

        <tekkan.synappz.com.tekkan.custom.CustomButtonView
            android:id="@+id/btn_more_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_button_height"
            android:layout_margin="@dimen/product_details_button_margin"
            android:background="@drawable/bg_button"
            android:text="@string/button_text_more_information"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_button_text"
            android:theme="@style/AppButtonStyle"
            app:customfont="OpenSansSemiBold"/>

    </LinearLayout>

</ScrollView>