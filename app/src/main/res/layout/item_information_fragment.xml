<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_margin"
                tools:context="tekkan.synappz.com.tekkan.fragment.product.ProductTabFragment">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_splash_pets"/>

    <tekkan.synappz.com.tekkan.custom.CustomFontTextView
        android:id="@+id/tv_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_toEndOf="@+id/iv_product_image"
        android:drawableEnd="@drawable/ic_chevron_right_green"
        android:maxLines="1"
        android:text="@string/disclaimer_text"
        android:textColor="@color/color_product_title_text"
        android:textSize="@dimen/product_title_text_size"
        app:customfont="OpenSansSemiBold"/>

    <tekkan.synappz.com.tekkan.custom.CustomFontTextView
        android:id="@+id/tv_product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_title"
        android:layout_marginEnd="@dimen/product_details_margin_end"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_toEndOf="@+id/iv_product_image"
        android:maxLines="2"
        android:text="@string/disclaimer_text"
        android:textSize="@dimen/product_details_text_size"
        app:customfont="OpenSansRegular"/>

</RelativeLayout>
