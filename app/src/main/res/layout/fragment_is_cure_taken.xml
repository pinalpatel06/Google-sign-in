<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_kit_step2_detail_layout_height"
        android:layout_marginBottom="@dimen/extra_margin_20dp"
        android:background="@color/color_qr_title_text">

        <com.bayer.ah.bayertekenscanner.custom.CustomFontTextView
            android:id="@+id/tv_pet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/is_cure_taken_text"
            android:textAlignment="center"
            android:textColor="@color/color_details_text_test_kit_step2"
            android:textSize="@dimen/test_kit_step2_detail_text_size"
            app:customfont="OpenSansRegular"/>
    </LinearLayout>

    <include layout="@layout/fragment_list"/>

</LinearLayout>
