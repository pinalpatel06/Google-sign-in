<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="AppButtonStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="BottomPanelTextviewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

   <!-- <style name="TabTextStyle">
        <item name="android:textSize">10sp</item>
    </style>-->

    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <style name="TeekMeldenButtonStyle" parent="TeekAppButtonStyle">
        <item name="android:layout_marginStart">@dimen/teek_melden_margin</item>
        <item name="android:layout_marginEnd">@dimen/teek_melden_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_10dp</item>
        <item name="android:padding">@dimen/teek_melden_margin</item>
        <item name="android:layout_marginTop">@dimen/teek_melden_margin</item>
    </style>

    <style name="TeekAppButtonStyle">
        <item name="android:textSize">@dimen/teek_melden_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_with_ripple</item>
    </style>
    <style name="TekenAppTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/teek_melden_title</item>
    </style>

    <style name="TeekMeldenTitleTextViewStyle" parent="TekenAppTextViewStyle">
        <item name="android:layout_marginTop">@dimen/teek_melden_top_margin</item>

    </style>

    <style name="TekenAppDetailTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/teek_melden_detail_text</item>
    </style>

    <style name="TeekMeldenDetailTextViewStyle" parent="TekenAppDetailTextViewStyle">
        <item name="android:layout_margin">@dimen/teek_melden_margin</item>
    </style>

    <style name="TekenAppSearchbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:hint">@string/hint_search_bar</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/extra_padding_15dp</item>
        <item name="android:paddingTop">@dimen/extra_padding_15dp</item>
        <item name="android:paddingEnd">@dimen/padding_10dp</item>
        <item name="android:paddingStart">@dimen/padding_10dp</item>
        <item name="android:textColor">@color/search_text_color</item>
        <item name="android:textSize">@dimen/search_text_size</item>
    </style>

    <style name="ProfileEditTextStyle">
        <item name="android:textColor">@color/default_body_text</item>
        <item name="android:background">@drawable/bg_bottom_line</item>
    </style>

    <style name="PetEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_edit_text_height</item>
        <item name="android:background">@drawable/bg_bottom_line</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/profile_default_text_color</item>
        <item name="android:textColorHint">@color/profile_default_text_color</item>
        <item name="android:textSize">@dimen/profile_default_text_size</item>
    </style>

    <style name="PetTextViewStyle" parent="@style/PetEditTextStyle">
        <item name="android:drawableEnd">@drawable/ic_expand_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="amu_Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="amu_Bubble.TextAppearance.Light" parent="amu_Bubble.TextAppearance.Dark">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

</resources>
